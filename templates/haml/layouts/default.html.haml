!!! 5
%html{:manifest => url_for('empty.appcache')}
  = include('layouts/default/head')
  - my $body_id = current_route;
  - my $lang1 = stash->{language};
  %body#$body_id.$lang1
    #page-wrapper
      = include('layouts/default/topbar')
      = include('layouts/default/header')
      #content-holder
        .tab-menu.hidden#main-menu
          = include('layouts/default/main_menu')
        = include('layouts/default/mobile_menu')
        = include('layouts/default/content')
      = include('layouts/default/footer')
