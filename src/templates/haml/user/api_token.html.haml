- stash(title => l('API Token'));
.grd-grid-12.api_token
  %h1= stash->{title}
  %p= l('To access a third party application, such as a mobile app, you are required to generate an API Token and to copy and paste it into your app. Click on â€œCreateâ€ to generate your API token.')
  %p= l('Should you not need any of the API tokens that youâ€™ve already generated, you may simply delete them from the list.')
  %p= l('Label your API tokens so as to recognise them easily at a later time.')

  - if ($tokens and @$tokens) {

    .grd-parent.grd-grid-12.grd-row-padding
      %table
        %thead
          %tr
            %th= l('Name')
            %th= l('Token')
            %th= l('Last Used')
            %th= l('Action')
        - foreach my $tr (@$tokens) {
        %tbody
          %tr
            %td= $tr->{display_name}
            %td= $tr->{token}
            %td
              - if ($tr->{last_used}) {
                %span= $tr->{last_used};
              - } else {
                %span= l('Never Used');
              - }
            %td
              %form{:action => url_for('user/api_token'), :method => 'POST'}
                %input{:type => 'hidden', :name => 'csrftoken', :value => stash('csrftoken')}
                %input{:type => 'hidden', :name => 'token', :value => "#{$tr->{token}}"}
                %input{:type => 'hidden', :name => 'action', :value => 'delete'}
                %span.button
                  %button#submit.button{:name => "submit" :type => "submit"}= l('Delete')
        - }
  - }

  - if (! ($tokens and length(@$tokens) >= 20)) {
    .grd-grid-12.grd-row-padding
      %form{:action => url_for('user/api_token'), :method => 'POST'} 
        %input{:type => 'hidden', :name => 'csrftoken', :value => stash('csrftoken')}
        %fieldset
          %legend= l('Create New Token')
          .grd-parent.grd-grid-12.grd-row-padding
            .grd-grid-4.form_label
              %label{:for => "display_name"}= l('Choose a Name:')
            .grd-grid-8
              %input#display_name{:type => 'text', :name => 'display_name', :required => 'required', :pattern => '^[\-a-zA-Z0-9]{1}[\-a-zA-Z0-9\s]{2,19}$', :title => 'alphanumeric with space and dash, 3-20 characters'}
              - if (stash('error') and stash('error')->{display_name}) {
                %p.errorfield= stash('error')->{display_name}
              - }
          .grd-parent.grd-grid-12
            .grd-grid-4
            .grd-grid-8
              %span.button
                %button#submit.button{:name => "submit" :type => "submit"}= l('Create')
  - }
