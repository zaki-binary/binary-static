- stash(title => l('Withdrawal Verification'));
%div.grd-grid-12
    %h1= l('Withdrawal Verification')
    - if (stash->{client_message}) {
        %p= stash->{client_message}
        %p.center-aligned
          %a.button.pjaxload{:href => url_for('cashier/forward?act=withdraw')}
            %span= l('Send Verification Email')
    - } else {
        .grd-parent
          %p.grd-grid-2.grd-grid-mobile-6.grd-centered-mobile
            %img.responsive{:src => url_for('images/pages/cashier/protection-icon.svg')}
          .grd-grid-10.grd-grid-mobile-12
            %p= l("For added security protection against unauthorised withdrawals, an email containing a secure link to the withdrawals page has been sent to your email [_1]. Please check your email to access this link.", $email)
            %p= l("If you don't receive the email within the next few minutes, please check your junk/spam mail folder.")
    - }
